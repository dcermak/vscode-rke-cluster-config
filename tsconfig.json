{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "out",
    "lib": ["es6"],
    "rootDir": "src",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "**/*.js",
    "**/*.js.map",
    "node_modules",
    ".vscode-test",
    "test-resources",
    "flycheck_*"
  ]
}
